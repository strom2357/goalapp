<h2><%= current_user.username %></h2>

<form action="<%= goal_url(@goal) %>" method="post">
	<input type="hidden" name="_method" value="put">
	
	<label for="goal_title">Title</label>
	<input type="text" name="goal[title]" id = "goal_title" value="<%= @goal.title %>">

	<label for="goal_body">Body</label>
	<input type="text" name="goal[body]" id="goal_body" value="<%= @goal.body %>">

	<label for="goal_deadline">Deadline</label>
	<input type="text" name="goal[deadline]" id="goal_deadline" value="<%= @goal.deadline %>">

	<input type="submit" value="Update Goal">
</form>